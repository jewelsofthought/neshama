<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">

    <link rel="stylesheet" href="{{ '/css/bulma.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/fontawesome.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/main.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/katex.min.css' | url }}">
    

    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    <script src="/js/vue.min.js"></script>

  </head>
  <body>
    <!--header -->
    <header>
      {% include "nav.njk" %}
    </header>

    <!--content -->
    <div class="columns is 8 layout-base maxwidth">
      <main role="main" class="content{% if templateClass %} {{ templateClass }}{% endif %}">
        {{ content | safe }}
      </main>
    </div>
  
    <!--footer -->
    {% include "footer.njk" %}

    <!-- Javascript (at end of document) -->
    <script src="/js/bulma-burger-vue.js"></script>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
